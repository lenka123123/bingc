<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_tab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#f9f9f9"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#dfdfdd" />

    <!-- 底部导航 -->
    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#f9f9f9"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/main_home"
            style="@style/RelativeLayout_Main"
            android:layout_marginTop="2dp">

            <RelativeLayout
                android:id="@+id/ll"
                style="@style/RelativeLayout_Main_Child">

                <ImageView
                    android:id="@+id/tab_img_home"
                    style="@style/ImageView_Style_Main_Tab" />

                <TextView
                    android:id="@+id/tab_text_home"
                    style="@style/TextView_Style_Main_Tab"
                    android:layout_below="@id/tab_img_home"
                    android:text="首页"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_zb"
            style="@style/RelativeLayout_Main"
            android:layout_marginTop="2dp">

            <RelativeLayout style="@style/RelativeLayout_Main_Child">

                <ImageView
                    android:id="@+id/tab_img_zb"
                    style="@style/ImageView_Style_Main_Tab" />

                <TextView
                    android:id="@+id/tab_text_zb"
                    style="@style/TextView_Style_Main_Tab"
                    android:layout_below="@+id/tab_img_zb"
                    android:layout_marginTop="1dp"
                    android:text="踪迹"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_shop_cart"
            style="@style/RelativeLayout_Main"
            android:layout_marginTop="2dp">

            <RelativeLayout style="@style/RelativeLayout_Main_Child">

                <ImageView
                    android:padding="10dp"
                    android:id="@+id/tab_img_shop_cart"
                    style="@style/ImageView_Style_Main_Tab" />

                <TextView
                    android:id="@+id/tab_text_shop_cart"
                    style="@style/TextView_Style_Main_Tab"
                    android:layout_below="@id/tab_img_shop_cart"
                    android:layout_centerHorizontal="true"
                    android:text="中间"
                    android:visibility="gone"
                    android:layout_marginTop="1dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_shop_cart_point"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_toRightOf="@id/tab_img_shop_cart"
                    android:background="@drawable/tab_button_center"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_ucenter"
            style="@style/RelativeLayout_Main"
            android:layout_marginTop="2dp">

            <RelativeLayout style="@style/RelativeLayout_Main_Child">

                <TextView
                    android:id="@+id/tab_text_ucenter"
                    style="@style/TextView_Style_Main_Tab"
                    android:text="消息"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/tab_img_ucenter"
                    style="@style/ImageView_Style_Main_Tab"
                    android:layout_below="@id/tab_text_ucenter" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_me"
            style="@style/RelativeLayout_Main"
            android:layout_marginTop="2dp">

            <RelativeLayout style="@style/RelativeLayout_Main_Child">

                <TextView
                    android:id="@+id/tab_text_me"
                    style="@style/TextView_Style_Main_Tab"
                    android:text="我的"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/tab_img_me"
                    style="@style/ImageView_Style_Main_Tab"
                    android:layout_below="@id/tab_text_me" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>