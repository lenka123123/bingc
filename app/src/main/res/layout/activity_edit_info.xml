<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close_img"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:src="@drawable/close_activity_img" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编辑资料"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pwd_login"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/x188"
        android:layout_height="@dimen/y188"
        android:layout_marginTop="@dimen/y30"
        android:background="@drawable/edit_logo_img"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/y20"
        android:text="点击更换头像"
        android:textSize="16sp" />

    <!-- 昵称 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y90"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="昵称"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/nick_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x45"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="用户名字最初9个字"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_666666" />
    </LinearLayout>


    <!-- 缤橙号 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y60"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="缤橙号"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/bc_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x45"
            android:background="@null"
            android:enabled="false"
            android:focusable="false"
            android:gravity="center_vertical|right"
            android:hint="123456"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_666666" />
    </LinearLayout>

    <!-- 签名 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y60"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="签名"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x45"

            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="最多输入40个字符"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_666666" />
    </LinearLayout>


    <!-- 性别 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y60"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="性别"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x45"

            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请选择性别"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_666666" />
    </LinearLayout>


    <!-- 生日 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y60"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="生日"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x45"

            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请选择生日"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_666666" />
    </LinearLayout>


    <!-- 地区 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y60"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="地区"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x45"

            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请选择地区"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_666666" />
    </LinearLayout>


    <!-- 标签 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y60"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="标签"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x45"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_666666" />
    </LinearLayout>
</LinearLayout>